<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backone"
    tools:context=".BookAppointmentActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="184dp"
        android:layout_height="46dp"
        android:layout_marginStart="132dp"
        android:layout_marginLeft="132dp"
        android:text="24/7 FITNESS"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="58dp" />

    <TextView
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="131dp"
        android:id="@+id/textViewAppTitle"
        android:layout_width="204dp"
        android:layout_height="37dp"
        android:layout_marginBottom="20dp"
        android:hint="username"
        android:text="Book Appointment"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.662"
        app:layout_constraintStart_toStartOf="parent"

    <EditText
        android:id="@+id/editTextFullName"
        android:layout_width="363dp"
        android:layout_height="44dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@android:drawable/ic_menu_edit"
        android:drawablePadding="2dp"
        android:ems="10"
        android:hint="Full Name"
        android:inputType="textPersonName"
        android:padding="0dp"
        android:paddingLeft="0dp"
        android:paddingTop="10dp"
        android:paddingRight="0dp"
        android:paddingBottom="10dp"
        android:textColor="@color/design_default_color_surface"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:icon="@drawable/baseline2"
        app:iconGravity="textStart"
        app:iconSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="212dp" />

    <EditText
        android:id="@id/editTextAppAddress"
        android:layout_width="363dp"
        android:layout_height="44dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@android:drawable/sym_action_email"
        android:drawablePadding="2dp"
        android:ems="10"
        android:hint="Address"
        android:inputType="textEmailAddress"
        android:padding="0dp"
        android:paddingLeft="0dp"
        android:paddingTop="10dp"
        android:paddingRight="0dp"
        android:paddingBottom="10dp"
        android:textColor="@color/design_default_color_surface"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:icon="@drawable/baseline2"
        app:iconGravity="textStart"
        app:iconSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="360dp" />

    <EditText
        android:id="@+id/editTextAppContact"
        android:layout_width="358dp"
        android:layout_height="48dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:ems="10"
        android:hint="Contact"
        android:inputType="textPassword"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="284dp" />

    <EditText
        android:id="@+id/editTextAppFees"
        android:layout_width="358dp"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.386"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>